{
  "manifest_version": 2,

  "name": "Nilai",
  "description": "Nilai's Chrome extension for saving your marks",
  "version": "0.0.1",
  "homepage_url": "http://nilai.plain",

  "icons": {
    "16":  "images/icon-16.png",
    "48":  "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "*://nilai.plain/"
  ],

  "omnibox": { "keyword" : "nilai" },

  "background": {
    "scripts": [
      "js/third_party/jquery.js",
      "js/nilai/base.js",
      "js/nilai/omnibox.js",
      "js/nilai/contexts.js"
    ]
  },

  "browser_action": {
      "default_icon": {
        "19": "images/icon-19.png",
        "38": "images/icon-38.png"
      },
      "default_title": "Save to Nilai",
      "default_popup": "nilai.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/nilai/content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}